    <fileDesc id="Bruehn1756_DLWS">
     <sourceDesc>
      <author>Mihaels Ernsts Brīns</author>
      <title>Dseesma Latweescha Walloda sarakstita</title>
      <date>1756</date>
     </sourceDesc>
    </fileDesc>
    <profileDesc>
     <domain type="public">Laicīgie teksti; gadījuma dzeja</domain>
    </profileDesc>
   </teiHeader>
   <text>
    <body>
      <pb n="1"/>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_1_1"/>
        <div type="Language" lang="Latvian">dziesma</div>
       <lb id="Bruehn1756_DLWS_1_2"/>
        <div type="Language" lang="Latvian">latviešā valodā sarakstita</div>
       <lb id="Bruehn1756_DLWS_1_3"/>
        <div type="Language" lang="Latvian">un</div>
       <lb id="Bruehn1756_DLWS_1_4"/>
        <div type="Language" lang="Latvian">pirmā svēdienā pēc vasaras=svētku atsvētes</div>
       <lb id="Bruehn1756_DLWS_1_5"/>
        <div type="Language" lang="Latvian">pie</div>
       <lb id="Bruehn1756_DLWS_1_6"/>
        <div type="Language" lang="Latvian">iecelšanas un iesvētišanas</div>
       <lb id="Bruehn1756_DLWS_1_7"/>
        <div type="Language" lang="Latvian">ta cienīga kunga</div>
       <lb id="Bruehn1756_DLWS_1_8"/>
        <div type="Language" lang="Latvian">jāņa andreia</div>
       <lb id="Bruehn1756_DLWS_1_9"/>
        <div type="Language" lang="Latvian">grundt</div>
       <lb id="Bruehn1756_DLWS_1_10"/>
        <div type="Language" lang="Latvian">par mācitaju</div>
       <lb id="Bruehn1756_DLWS_1_11"/>
        <div type="Language" lang="Latvian">pie tās liepājas latviešas draudzibas</div>
       <lb id="Bruehn1756_DLWS_1_12"/>
        <div type="Language" lang="Latvian">ar</div>
       <lb id="Bruehn1756_DLWS_1_13"/>
        <div type="Language" lang="Latvian">ērģeliem, trumetēm un bungām</div>
       <lb id="Bruehn1756_DLWS_1_14"/>
        <div type="Language" lang="Latvian">nodziedata</div>
       <lb id="Bruehn1756_DLWS_1_15"/>
        <div type="Language" lang="Latvian">no</div>
       <lb id="Bruehn1756_DLWS_1_16"/>
        <div type="Language" lang="Latvian">miķeļa <corr>ernsta</corr><sic>ierusta</sic> brühn</div>
       <lb id="Bruehn1756_DLWS_1_17"/>
        <div type="Language" lang="Latvian">kantera un mācitaja pie tās liepājas pilsatas skolas.</div>
      </div>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_1_18"/>
        <div type="Language" lang="Latvian">ķensbergā</div>
       <lb id="Bruehn1756_DLWS_1_19"/>
        <div type="Language" lang="Latvian">driķēts pie jāņa jndriķa artunga. 1756.</div>
      </div>
      <pb n="2"/>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_2_1"/>
       <div type="Language" lang="Italian">Tutti.</div>
       <lb id="Bruehn1756_DLWS_2_2"/>
        <div type="Language" lang="Latvian">paklausait jūsu vaditajiem, un</div>
       <lb id="Bruehn1756_DLWS_2_3"/>
        <div type="Language" lang="Latvian">esiet viņiem padevīgi.</div>
      </div>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_2_4"/>
       <div type="Language" lang="Italian">Recitativ.</div>
       <lb id="Bruehn1756_DLWS_2_5"/>
        <div type="Language" lang="Latvian">jūs eita bojā</div>
       <lb id="Bruehn1756_DLWS_2_6"/>
        <div type="Language" lang="Latvian">jūs nesaprātīgi cilvēki,</div>
       <lb id="Bruehn1756_DLWS_2_7"/>
        <div type="Language" lang="Latvian">ja jūs ne ņemiet vērā</div>
       <lb id="Bruehn1756_DLWS_2_8"/>
        <div type="Language" lang="Latvian">ko jums saka tie dieva vīri</div>
       <lb id="Bruehn1756_DLWS_2_9"/>
        <div type="Language" lang="Latvian">jo viņi jums pasludina to dieva vārdu</div>
       <lb id="Bruehn1756_DLWS_2_10"/>
        <div type="Language" lang="Latvian">kas vada uz taisnu svētibas ceļu.</div>
       <lb id="Bruehn1756_DLWS_2_11"/>
        <div type="Language" lang="Latvian">lai tad mēs vella valstibai atraujamies</div>
       <lb id="Bruehn1756_DLWS_2_12"/>
        <div type="Language" lang="Latvian">un kristus draudzei piebiedramies.</div>
       <lb id="Bruehn1756_DLWS_2_13"/>
        <div type="Language" lang="Latvian">tad būsim mēs no ļauna nagiem izglābti</div>
       <lb id="Bruehn1756_DLWS_2_14"/>
        <div type="Language" lang="Latvian">un tās dieva valstibas mantnieki.</div>
      </div>
      <pb n="3"/>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_3_1"/>
       <div type="Language" lang="Italian">Aria.</div>
       <lb id="Bruehn1756_DLWS_3_2"/>
        <div type="Language" lang="Latvian">i.</div>
       <lb id="Bruehn1756_DLWS_3_3"/>
        <div type="Language" lang="Latvian">kungs mums patīk klausities</div>
       <lb id="Bruehn1756_DLWS_3_4"/>
        <div type="Language" lang="Latvian">tavam kalpam mīlīgam;</div>
       <lb id="Bruehn1756_DLWS_3_5"/>
        <div type="Language" lang="Latvian">bet kur spēks sev' izglābties</div>
       <lb id="Bruehn1756_DLWS_3_6"/>
        <div type="Language" lang="Latvian">grēciniekam nabagam?</div>
       <lb id="Bruehn1756_DLWS_3_7"/>
        <div type="Language" lang="Latvian">jo mēs esam kurli, akli,</div>
       <lb id="Bruehn1756_DLWS_3_8"/>
        <div type="Language" lang="Latvian">un ta velna draudzenieki.</div>
      </div>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_3_9"/>
        <div type="Language" lang="Latvian">2.</div>
       <lb id="Bruehn1756_DLWS_3_10"/>
        <div type="Language" lang="Latvian">mūsu prāts kas apstulbots</div>
       <lb id="Bruehn1756_DLWS_3_11"/>
        <div type="Language" lang="Latvian">maldidams ikdienas</div>
       <lb id="Bruehn1756_DLWS_3_12"/>
        <div type="Language" lang="Latvian">iekrīt ļauna valgos.</div>
       <lb id="Bruehn1756_DLWS_3_13"/>
        <div type="Language" lang="Latvian">mums ne kādas ceribas.</div>
       <lb id="Bruehn1756_DLWS_3_14"/>
        <div type="Language" lang="Latvian">jo mēs esam kurli, akli,</div>
       <lb id="Bruehn1756_DLWS_3_15"/>
        <div type="Language" lang="Latvian">un ta velna draudzenieki.</div>
      </div>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_3_16"/>
        <div type="Language" lang="Latvian">3.</div>
       <lb id="Bruehn1756_DLWS_3_17"/>
        <div type="Language" lang="Latvian">kungs, mēs gribam klausities,</div>
       <lb id="Bruehn1756_DLWS_3_18"/>
        <div type="Language" lang="Latvian">esi mums par palīgu.</div>
       <lb id="Bruehn1756_DLWS_3_19"/>
        <div type="Language" lang="Latvian">mēs uz tev' paļaujamies</div>
       <lb id="Bruehn1756_DLWS_3_20"/>
        <div type="Language" lang="Latvian">un uz tavu stiprumu.</div>
       <lb id="Bruehn1756_DLWS_3_21"/>
        <div type="Language" lang="Latvian">lai ir citi kurli, akli,</div>
       <lb id="Bruehn1756_DLWS_3_22"/>
        <div type="Language" lang="Latvian">un ta velna draudzenieki.</div>
      </div>
      <pb n="4"/>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_4_1"/>
       <div type="Language" lang="Italian">Choral.</div>
       <lb id="Bruehn1756_DLWS_4_2"/>
        <div type="Language" lang="Latvian">pār manim gribi gādāt</div>
       <lb id="Bruehn1756_DLWS_4_3"/>
        <div type="Language" lang="Latvian">in palīdzēt man' strādāt;</div>
       <lb id="Bruehn1756_DLWS_4_4"/>
        <div type="Language" lang="Latvian">mans darbs lai labi steidzās;</div>
       <lb id="Bruehn1756_DLWS_4_5"/>
        <div type="Language" lang="Latvian">kā sācis, laimē beidzās.</div>
      </div>
      <div type="Paragraph">
       <lb id="Bruehn1756_DLWS_4_6"/>
        <div type="Language" lang="Latvian">tavs vārdiņš lai man' uztur</div>
       <lb id="Bruehn1756_DLWS_4_7"/>
        <div type="Language" lang="Latvian">ka es ne grozos ne kur,</div>
       <lb id="Bruehn1756_DLWS_4_8"/>
        <div type="Language" lang="Latvian">dod man' to labi saprast,</div>
       <lb id="Bruehn1756_DLWS_4_9"/>
        <div type="Language" lang="Latvian">to debes' ceļu atrast.</div>
      </div>
    </body>

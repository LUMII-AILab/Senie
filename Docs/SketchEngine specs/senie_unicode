ENCODING "UTF-8"
LANGUAGE "Latvian"
INFOHREF "http://senie.korpuss.lv/"
MAINTAINER "mailto:senie@ailab.lv"
DIACHRONIC "doc.year2"


ATTRIBUTE sourceWord {
	LABEL "Vārdforma avotā"
}
ATTRIBUTE word {
	LABEL "Vārdforma ar labojumiem"
}
ATTRIBUTE translit {
	LABEL "Normalizācija"
}

ATTRIBUTE address {
	LABEL "Adrese"
}

ATTRIBUTE   lc {
	LABEL	"Vārdforma (ar maziem burtiem)"
	DYNAMIC  utf8lowercase
	DYNLIB   internal
	ARG1     "C"
	FUNTYPE  s
	FROMATTR word
	TYPE     index
	TRANSQUERY	yes
}

ATTRIBUTE   translit_lc {
	LABEL	"Normalizācija (indekss)"
	DYNAMIC  utf8lowercase
	DYNLIB   internal
	ARG1     "C"
	FUNTYPE  s
	FROMATTR translit
	TYPE     index
	TRANSQUERY	yes
}

STRUCTURE doc {
	LABEL "Dokuments"
	ATTRIBUTE id {
		LABEL "Dokumenta ID"
	}
	ATTRIBUTE title {
		LABEL "Dokumenta nosaukums"
	}
	ATTRIBUTE collection {
		LABEL "Kolekcija"
	}
	ATTRIBUTE year1 {
		LABEL "Sākumgads"
		NUMERIC 1
	}
	ATTRIBUTE year2 {
		LABEL "Beigugads"
		NUMERIC 1
	}
	ATTRIBUTE century {
		LABEL "Gadsimts"
	}
	ATTRIBUTE genre {
		LABEL "Žanrs"
	}
	ATTRIBUTE subgenre {
		LABEL "Apakšžanrs"
		MULTIVALUE  "1"
        MULTISEP ","
	}
	ATTRIBUTE manuscript {
		LABEL "Manuskripts"
	}
	ATTRIBUTE external {
		LABEL "Saite"
	}
	ATTRIBUTE wordcount {
		LABEL "Tekstvienības"
	}
}

